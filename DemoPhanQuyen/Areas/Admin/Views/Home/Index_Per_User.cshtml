
@{
    ViewBag.Title = "Index_Per_User";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.Action("tbl_role_per_user", "Home")
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
        $("#successMessage").hide();
        function check() {
            var usergroupid = $("#ddl").val();
            var username = $("#ddl1").val();
            var role_id = [];
                    $('.test:checked').each(function () {
                        role_id.push($(this).val());
                    });
            var role_id_uncheck = [];
                    $('.test:not(:checked)').each(function () {
                        role_id_uncheck.push($(this).val());
                    });

                    if (role_id == "")
                    {
                        alert("Bạn chưa cấp quyền!");
                    }
                    else
                    {
                        $.ajax({
                            url: '@Url.Action("Save_user", "Home")',
                            data: { role_id: role_id, usergroupid: usergroupid, username: username, role_id_uncheck: role_id_uncheck },
                            type: 'POST',
                            dataType: 'json',
                            traditional: true,
                            success: function (data) {
                                $("#successMessage").show();
                                $("#successMessage").delay(2000).slideUp();

                            },
                        });
                    }
        }


</script>
<h2>Index_Per_User</h2>
